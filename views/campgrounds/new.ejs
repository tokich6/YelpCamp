
<%- include("../partials/header") %>

<div class="container">
    <div class="row">

        <h1 class="h1">Create a new campground</h1>

        <div class="form">
            <form action="/campgrounds" method="POST">

                <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url" required>
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="add desciption" required>
                </div>
                <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price (per night)" min="0.01" step="0.01" required>
                </div>
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

            </form>

        <a href="/campgrounds">Go back</a>

        </div>
    </div>
</div>


